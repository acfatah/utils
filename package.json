{
  "name": "@acfatah/utils",
  "version": "0.0.1",
  "description": "A collection of ES6 or Javascript utility functions.",
  "main": "src/index.js",
  "type": "module",
  "scripts": {
    "build": "vite build",
    "check": "npm run check:format && npm run check:lint",
    "check:format": "prettier --check --ignore-path .gitignore .",
    "check:lint": "eslint .",
    "clean": "rimraf .nyc_output coverage dist",
    "dev": "vitest",
    "fix": "npm run fix:format && npm run fix:lint",
    "fix:format": "npm run check:format --write",
    "fix:lint": "npm run check:lint --fix --quiet",
    "test": "npm run test:unit:coverage",
    "test:unit": "vitest run",
    "test:unit:coverage": "vitest run --coverage"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/acfatah/utils.git"
  },
  "keywords": [],
  "author": "Achmad F. Ibrahim <acfatah@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/acfatah/utils/issues"
  },
  "homepage": "https://github.com/acfatah/utils#readme",
  "devDependencies": {
    "@rushstack/eslint-patch": "^1.10.2",
    "@vitest/coverage-istanbul": "^1.5.0",
    "eslint": "^8.57.0",
    "lint-staged": "^15.2.2",
    "nyc": "^15.1.0",
    "prettier": "^3.2.5",
    "simple-git-hooks": "^2.11.1",
    "vitest": "^1.5.0"
  }
}
